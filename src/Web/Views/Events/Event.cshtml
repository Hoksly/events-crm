@model Microsoft.eShopWeb.Web.ViewModels.EventViewModel

<div class="container event-details">
    <div class="row">
        <div class="col-md-8">
            <h1 class="display-4">@Model.Name</h1>
            <p class="lead">@Model.Description</p>
        </div>
        <div class="col-md-4 text-md-end">
            <a asp-page="/Index" class="btn btn-primary mt-4">Back to Events</a>
        </div>
    </div>

    <hr class="my-4">

    <div class="row">
        <div class="col-md-6">
            <h2 class="mt-4">Event Details</h2>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Starts At
                    <span>@Model.StartDate.ToString("g")</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Ends At
                    <span>@Model.EndDate.ToString("g")</span>
                </li>
            </ul>
        </div>
        <div class="col-md-6">
          
        </div>
    </div>
    
    @if (User.Identity.IsAuthenticated && ViewData["isAlreadyRegistered"]?.ToString() == "False")
    {
        <a asp-controller="Events" asp-action="Register" asp-route-id="@Model.Id" class="btn btn-primary mt-4">Register for Event</a>
        <input type="hidden" asp-for="@Model.Id" name="id" />
    }
    else if (User.Identity.IsAuthenticated && ViewData["isAlreadyRegistered"]?.ToString() == "True")
    {
        <a class="btn btn-primary mt-4">You are already registered for this event.</a>
    }
    else
    {
        <a href="/Identity/Account/Login" class="btn btn-secondary mt-4">Login to Register</a>
    }
    
</div>